# Medical Registry Desktop App - Environment Variables Example
# Copy this file to .env and fill in your actual values

# ==============================================
# KEYCLOAK AUTHENTICATION CONFIGURATION
# ==============================================
# Your Keycloak client ID for authentication
VITE_KEYCLOAK_CLIENT_ID=medical-registry

# Your Keycloak client secret (keep this secure!)
VITE_KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret-here

# OAuth scopes for authentication
VITE_KEYCLOAK_SCOPE=openid profile email
VITE_KEYCLOAK_URL=https://keycloak.example.com/auth

# ==============================================
# API ENDPOINTS
# ==============================================
# Main API base URL for medical registry services
VITE_API_BASE_URL=https://your-api-domain.com

# Keycloak authentication endpoint
VITE_AUTH_URL=https://your-keycloak-domain.com/realms/yourRealm/protocol/openid-connect/token

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
# Application display name
VITE_APP_NAME=Medical Registry

# Application version
VITE_APP_VERSION=1.0.0

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
# Enable development mode features
VITE_DEV_MODE=true

# Logging level (debug, info, warn, error)
VITE_LOG_LEVEL=debug

# ==============================================
# OPTIONAL SETTINGS
# ==============================================
# Custom port for development server (default: 1420)
# VITE_DEV_PORT=1420

# Enable/disable hot module replacement
# VITE_HMR_ENABLED=true

# Database connection string (if needed for local development)
# VITE_DATABASE_URL=your-database-connection-string

# File upload settings
# VITE_MAX_FILE_SIZE=10485760
# VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# ==============================================
# PRODUCTION OVERRIDES
# ==============================================
# Set these in your production environment
# VITE_DEV_MODE=false
# VITE_LOG_LEVEL=error
